<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<org.kbieron.iomerge.views.RemoteControlView android:layout_width="wrap_content"
												 android:layout_height="fill_parent"
												 android:clickable="true"
												 android:id="@+id/remote_control_view" android:layout_above="@+id/keyboard_btn"/>

	<Button style="?android:attr/buttonStyleSmall"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Show keyboard"
			android:id="@+id/keyboard_btn"
			android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>